<?xml version="1.0" encoding="UTF-8"?>
<project name="module_cram" default="compile.module.cram">
  <dirname property="module.cram.basedir" file="${ant.file.module_cram}"/>
  
  <property name="module.jdk.home.cram" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.cram" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.cram" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.cram" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="cram.output.dir" value="${module.cram.basedir}/out/production/CRAM"/>
  <property name="cram.testoutput.dir" value="${module.cram.basedir}/out/test/CRAM"/>
  
  <path id="cram.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="cram.module.production.classpath">
    <path refid="${module.jdk.classpath.cram}"/>
  </path>
  
  <path id="cram.runtime.production.module.classpath">
    <pathelement location="${cram.output.dir}"/>
  </path>
  
  <path id="cram.module.classpath">
    <path refid="${module.jdk.classpath.cram}"/>
    <pathelement location="${cram.output.dir}"/>
  </path>
  
  <path id="cram.runtime.module.classpath">
    <pathelement location="${cram.testoutput.dir}"/>
    <pathelement location="${cram.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.cram">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.cram">
    <patternset refid="excluded.from.module.cram"/>
  </patternset>
  
  <path id="cram.module.sourcepath">
    <dirset dir="${module.cram.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.cram" depends="compile.module.cram.production,compile.module.cram.tests" description="Compile module CRAM"/>
  
  <target name="compile.module.cram.production" depends="register.custom.compilers" description="Compile module CRAM; production classes">
    <mkdir dir="${cram.output.dir}"/>
    <javac2 destdir="${cram.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.cram}/javac">
      <compilerarg line="${compiler.args.cram}"/>
      <bootclasspath refid="cram.module.bootclasspath"/>
      <classpath refid="cram.module.production.classpath"/>
      <src refid="cram.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.cram"/>
    </javac2>
    
    <copy todir="${cram.output.dir}">
      <fileset dir="${module.cram.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.cram.tests" depends="register.custom.compilers,compile.module.cram.production" description="compile module CRAM; test classes" unless="skip.tests"/>
  
  <target name="clean.module.cram" description="cleanup module">
    <delete dir="${cram.output.dir}"/>
    <delete dir="${cram.testoutput.dir}"/>
  </target>
</project>